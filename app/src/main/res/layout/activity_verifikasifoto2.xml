<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".Changepassword">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logoputih"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="-10dp" />

    <RelativeLayout
        android:id="@+id/whiteContainer"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/imageView"
        android:background="@drawable/rounded_corners_left"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="174dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Informasi"
            android:textColor="@color/textColorBlack"
            android:fontFamily="@font/poppinsbold"
            android:textSize="30dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:text="Adrian Nathanael Kalalo"
            android:textColor="@color/textColorBiruGelap"
            android:fontFamily="@font/poppinsbold"
            />
        <TextView
            android:id="@+id/textView7"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18dp"
            android:text="202043502735"
            android:textColor="@color/textColorGrey"
            android:fontFamily="@font/poppinsregular"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Divisi Software Engineering"
            android:textColor="@color/textColorGrey"
            android:fontFamily="@font/poppinsregular"
            />
        <TextView
            android:id="@+id/textView9"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20dp"
            android:text="08:01:25"
            android:textColor="@color/textColorBiruGelap"
            android:fontFamily="@font/poppinsbold"
            />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Jumat, 26 Juni 2023"
            android:textColor="@color/textColorBiruGelap"
            android:fontFamily="@font/poppinsbold"
            />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Anda berada di dalam radius kantor"
            android:textColor="@color/textColorBiruGelap"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginBottom="25dp"
            />
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="18dp"
            android:text="TERLAMBAT !"
            android:textColor="@color/status_terlambat"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginBottom="35dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/buttonKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/whiteContainer"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="0.6"
            android:text="Oke"
            android:background="@drawable/custombutton3"
            android:id="@+id/konfrimasibutton"
            android:textColor="@color/primaryColor"
            android:onClick="konfirmasiButton"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonKonfirmasi"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/vector1" />
</RelativeLayout>
