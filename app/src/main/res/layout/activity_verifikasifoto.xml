<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    tools:context=".Verifikasifoto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logoputih"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="-10dp" />

    <RelativeLayout
        android:id="@+id/whiteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:background="@drawable/rounded_corners_left"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="174dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Foto "
            android:textColor="@color/textColorBlack"
            android:fontFamily="@font/poppinsbold"
            android:textSize="30dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Pastikan Foto yang diunggah nampak Wajah dan Ruangan"
            android:textColor="@color/textColorGrey"
            android:fontFamily="@font/poppinsregular"
            />

        <ImageView
            android:id="@+id/imageview5"
            android:layout_width="275dp"
            android:layout_height="250dp"
            android:layout_below="@id/textView3"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview5"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16dp"
            android:text="Adrian Nathanael Kalalo"
            android:textColor="@color/textColorBiruGelap"
            android:fontFamily="@font/poppinsbold"
            />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16dp"
            android:text="202043502735"
            android:textColor="@color/textColorGrey"
            android:fontFamily="@font/poppinsregular"
            />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16dp"
            android:text="Divisi Software Engineering"
            android:textColor="@color/textColorGrey"
            android:fontFamily="@font/poppinsregular"
            />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16dp"
            android:text="08:01:25"
            android:textColor="@color/textColorBiruGelap"
            android:fontFamily="@font/poppinsbold"
            />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="16dp"
            android:text="Jumat, 26 Juni 2023"
            android:textColor="@color/textColorBiruGelap"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/iconkamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/whiteContainer"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_kemabli_putih"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginEnd="90dp"
            android:scaleType="centerCrop"
            android:id="@+id/vBackButton"/>

        <ImageButton
            android:id="@+id/button_capture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_camera_putih"
            android:background="@android:color/transparent"
            android:padding="8dp"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_done_putih"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:layout_marginStart="90dp"
            android:scaleType="fitCenter"
            android:id="@+id/vfKonfirmasiButton" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/garis_putih"
        android:layout_below="@+id/iconkamera"
        android:layout_marginTop="10dp"
        android:id="@+id/garisputih"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconkamera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/vector1" />
    </RelativeLayout>
